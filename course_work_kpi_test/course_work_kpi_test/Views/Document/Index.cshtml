@{
    ViewData["Title"] = "Головна сторінка";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f8f9fa;">
    <div style="background-color: white; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); padding: 20px; width: 60%; border-radius: 8px;">
        <h2 style="font-family: Arial, sans-serif; color: #333;">Генератор звіту</h2>
        <p style="color: #666;">Щоб згенерувати звіт на базі документації, завантажте Ваш документ (.doc, .docx) сюди:</p>
        <form asp-action="CheckDocument" method="post" enctype="multipart/form-data">
            <div style="margin-bottom: 10px;">
                <label for="fileUpload" style="display: block; font-weight: bold; margin-bottom: 5px;">Виберіть документ:</label>
                <input type="file" id="fileUpload" name="UploadedFile" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" required />
            </div>
            <div style="margin-bottom: 10px;">
                <label for="budget" style="display: block; font-weight: bold; margin-bottom: 5px;">Тривалість (тижні):</label>
                <input type="number" id="duration" name="Duration" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" required />
            </div>
            <div style="margin-bottom: 10px;">
                <label for="budget" style="display: block; font-weight: bold; margin-bottom: 5px;">Бюджет (USD):</label>
                <input type="number" id="budget" name="Budget" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" required />
            </div>
            <button type="submit" style="background-color: #2c2c3e; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">Завантажити документ</button>
        </form>
    </div>
</div>